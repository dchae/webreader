<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @page_title %></title>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.5/jszip.min.js"></script>
    <script type="text/javascript" src="/javascripts/epub.min.js"></script>
  </head>
  <body>
    <header>
      <% session[:messages].each do |message| %>
        <p class="flash"><%= message %></p>
      <% end %>
      <% session[:messages].clear %>
    </header>
    <div id="layout">
      <nav id="menu">
        <a href="/">Files</a>
        <ul class="menu-list">
          <% @files.each do |id, filename| %>
            <li class='menu-item'>
              <a href="/reader/<%= id %>"><%= filename %></a>
            </li>
          <% end %>
          <li>
            <a href="/library/new" class="menu-link">Upload</a>
          </li>
        </ul>
      </nav>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
